
<!-- If the user is logged in, render the painting content -->
{{#if loggedIn}}

{{#each posts}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <button class= "edit-me" data-id="{{this.id}}">Edit</a></button>
        <button class="btn-danger" data-id="{{this.id}}">DELETE</button>
    </div>
{{/each}}
<div id="edit-form"></div>


<div class="new-post-form">
  <h2>Create Review</h2>
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" id="title" placeholder="Enter title">
    </div>
    <div class="form-group">
      <label for="content">Content:</label>
      <textarea id="content" placeholder="Enter content"></textarea>
    </div>
    <button type="submit" id="create-post-btn">submit</button>
  </form>
</div>

{{else}}
<a href="/login">You must login first to view this painting</a>
{{/if}}

<script src="/public/js/post.js"></script>
