<div class="row justify-space-between-md"></div>
  <div class="review-card">
    <h2 class="page-title">Write a Review</h2>
    <form class="form review-form">
      <div class="form-group">
        <h3>Title:</h3>
        <input
          class="form-input"
          type="text"
          placeholder="Enter title"
          id="rev-title"
        />
      </div>

      <div class="form-group">
        <h3>Year:</h3>
        <input
          class="form-input"
          type="number"
          placeholder="Enter release year"
          id="year"
        />
      </div>

      <div class="form-group">
        <h3>Creator:</h3>
        <input
          class="form-input"
          type="text"
          placeholder="Enter creator's name."
          id="rev-creator"
        />
      </div>

      <div class="radio-group">
        <h3>Choose a medium:</h3>
        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rev-book"
            value="Book"
            name="item-type"
          />
          <label for="rev-book">Book</label>
        </div>

        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rev-video"
            value="Video"
            name="item-type"
          />
          <label for="rev-video">Movie</label>
        </div>

        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rev-music"
            value="Music"
            name="item-type"
          />
          <label for="rev-music">Music</label>
        </div>

        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rev-game"
            value="Game"
            name="item-type"
          />
          <label for="rev-game">Game</label>
        </div>

      </div>

      <div class="form-group">
        <h3>Review:</h3>
        <input
          class="form-input"
          type="text"
          placeholder="Write your review here!"
          id="rev-review"
        />
      </div>

      <div class="radio-group">
        <h3>Rating:</h3>
        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rating-one"
            value="1"
            name="rating"
          />
          <label for="rating-one">1</label>
        </div>

        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rating-two"
            value="2"
            name="rating"
          />
          <label for="rating-two">2</label>
        </div>

        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rating-three"
            value="3"
            name="rating"
          />
          <label for="rating-three">3</label>
        </div>

        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rating-four"
            value="4"
            name="rating"
          />
          <label for="rating-four">4</label>
        </div>

        <div class="form-group">
          <input
            class="form-input"
            type="radio"
            id="rating-five"
            value="5"
            name="rating"
          />
          <label for="rating-five">5</label>
        </div>

      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/form.js"></script>