<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input
          class="form-input"
          type="text"
          placeholder="Create a user name"
          id="username-signup"
        />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input
          class="form-input"
          type="text"
          placeholder="Enter your email"
          id="email-signup"
        />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input
          class="form-input"
          type="password"
          placeholder="Create a password between 8 -10 characters"
          id="password-signup"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary signup-btn" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>