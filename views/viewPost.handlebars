
<!-- If the user is logged in, render the painting content -->
{{#if loggedIn}}

<section id="viewpost">
<h2>{{post.title}}</h2>
<p>{{post.content}}</p>
<small>Posted by {{post.user.username}} on {{post.createdAt}}</small>



<form id="comment-form">
    <textarea name="content" placeholder="Add a comment..." required></textarea>
    <input type="hidden" name="postId" value="{{post.id}}">
    <input type="hidden" name="userId" value="{{session.userId}}">
    
    <button type="submit" id="com-sub">Comment</button>
</form>

{{#if post.comments}}
    <h4>Comments:</h4>
    <ul>
        {{#each post.comments}}
            <li>
                <strong>{{this.user.username}}:</strong> {{this.content}}
                <br>
                <small>Posted on {{this.createdAt}}</small>
            </li>
        {{/each}}
    </ul>

{{else}}
    <p>No comments yet.</p>
{{/if}}
</section>

{{else}}
<a href="/login">You must login first to view this painting</a>
{{/if}}

<script src="/public/js/comment.js"></script>
